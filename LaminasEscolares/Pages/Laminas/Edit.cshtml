@page
@model LaminasEscolares.Pages.Laminas.EditModel
@{
}

<h4> Editar Lamina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="lamina.Id" />
            <div class="form-group">
                <label asp-for="lamina.Categoria" class="control-label"></label>
                <input asp-for="lamina.Categoria" class="form-control" />
                <span asp-validation-for="lamina.Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lamina.Reglon" class="control-label"></label>
                <input asp-for="lamina.Reglon" class="form-control" />
                <span asp-validation-for="lamina.Reglon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lamina.Lamina" class="control-label"></label>
                <input asp-for="lamina.Lamina" class="form-control" />
                <span asp-validation-for="lamina.Lamina" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="lamina.Descripcion" class="control-label"></label>
                <input asp-for="lamina.Descripcion" class="form-control" />
                <span asp-validation-for="lamina.Descripcion" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="lamina.Cantidad" class="control-label"></label>
                <input asp-for="lamina.Cantidad" class="form-control" />
                <span asp-validation-for="lamina.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lamina.FechaActualizacion" class="control-label"></label>
                <input asp-for="lamina.FechaActualizacion" class="form-control" type="date"/>
                <span asp-validation-for="lamina.FechaActualizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guarda" class="btn btn-primary" />           
                <a class="btn btn-info" asp-page="./Index"> Volver</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
